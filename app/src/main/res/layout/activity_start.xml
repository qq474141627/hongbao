<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计为您抢到："
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textsize_7" />

                <TextView
                    android:id="@+id/tv_total_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_15"
                    tools:text="12223个" />

                <TextView
                    android:id="@+id/tv_wechat_cout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信红包：0个"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textsize_7" />

                <TextView
                    android:id="@+id/tv_qq_cout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="QQ红包：0个"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textsize_7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="启动后台服务"
                    android:textSize="@dimen/textsize_8"
                    android:textColor="@color/text_black"
                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="监听通知消息"
                    android:textSize="@dimen/textsize_8"
                    android:textColor="@color/text_black"
                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/white"
                android:text="使用指南"
                android:textSize="@dimen/textsize_8"
                android:textColor="@color/text_black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信红包"
                    android:textSize="@dimen/textsize_8"
                    android:textColor="@color/text_black"
                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/ll_wechat_mode"
                android:padding="15dp">
                <TextView
                    android:id="@+id/tv_wechat_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信抢红包模式"
                    android:textSize="@dimen/textsize_8"
                    android:textColor="@color/text_black"
                    />
                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/arrow_right_icon" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/ll_wechat_delay"
                android:padding="15dp">
                <TextView
                    android:id="@+id/tv_wechat_delay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置微信抢红包延迟时间"
                    android:textSize="@dimen/textsize_8"
                    android:textColor="@color/text_black"
                    />
                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/arrow_right_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:padding="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QQ红包"
                    android:textSize="@dimen/textsize_8"
                    android:textColor="@color/text_black"
                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>
